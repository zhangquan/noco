{
  "name": "@workspace/flex-parser",
  "version": "1.0.0",
  "description": "Flex Layout Parser - Convert absolute positioning (frame coordinate system) design schema to CSS Flex layout structure",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "flex",
    "layout",
    "parser",
    "converter",
    "css",
    "design-to-code"
  ],
  "license": "MIT"
}
